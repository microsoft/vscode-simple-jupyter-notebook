{
  "name": "simple-jupyter-notebook",
  "displayName": "Simple Jupyter Notebook",
  "publisher": "ms-vscode",
  "description": "Starter extension for developing debug adapters for VS Code.",
  "author": {
    "name": "Microsoft Corporation"
  },
  "version": "1.0.0",
  "engines": {
    "vscode": "^1.49.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onNotebookEditor:jupyter",
    "onNotebook:jupyter",
    "onCommand:simple-jupyter-notebook.restart-kernel",
    "onDebug:xeus"
  ],
  "enableProposedApi": true,
  "contributes": {
    "breakpoints": [
      {
        "language": "python"
      }
    ],
    "debuggers": [
      {
        "type": "xeus",
        "label": "xeus Debug"
      }
    ],
    "notebookProvider": [
      {
        "viewType": "jupyter",
        "displayName": "Jupyter",
        "selector": [
          {
            "filenamePattern": "*.ipynb",
            "excludeFileNamePattern": "*.test.ipynb"
          }
        ]
      }
    ],
    "commands": [
      {
        "command": "simple-jupyter-notebook.toggleDebugging",
        "title": "Toggle Notebook Debugging",
        "icon": "$(bug)"
      },
      {
        "command": "simple-jupyter-notebook.restart-kernel",
        "title": "Restart Notebook Kernel",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "simple-jupyter-notebook.toggleDebugging",
          "when": "notebookEditorFocused",
          "group": "navigation@1"
        },
        {
          "command": "simple-jupyter-notebook.restart-kernel",
          "when": "notebookEditorFocused",
          "group": "navigation@2"
        }
      ]
    },
    "configuration": [
      {
        "title": "Simple Jupyter Kernels",
        "properties": {
          "simple-jupyter.searchPaths": {
            "description": "List of folders to search to discover Jupyter kernels",
            "default": [],
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        }
      }
    ]
  },
  "main": "./out/extension.js",
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "updatetypes": "cd src/types && vscode-dts dev && vscode-dts master",
    "test": "npm run test:lint && npm run test:fmt",
    "test:lint": "eslint \"src/**/*.ts\"",
    "test:fmt": "prettier --list-different \"src/**/*.ts\"",
    "fmt": "prettier --write \"src/**/*.ts\"&& npm run test:lint -- --fix"
  },
  "prettier": {
    "trailingComma": "all",
    "singleQuote": true,
    "arrowParens": "avoid",
    "printWidth": 100,
    "tabWidth": 2
  },
  "devDependencies": {
    "@types/glob": "^7.1.1",
    "@types/mocha": "^7.0.2",
    "@types/node": "^13.11.0",
    "@types/split2": "^2.1.6",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "eslint": "^7.9.0",
    "eslint-plugin-header": "^3.1.0",
    "glob": "^7.1.6",
    "mocha": "^8.4.0",
    "prettier": "^2.1.2",
    "typescript": "^3.4.3",
    "vscode-test": "^1.4.0",
    "vscode-dts": "^0.3.1"
  },
  "dependencies": {
    "@nteract/messaging": "^7.0.10",
    "get-port": "^5.1.1",
    "rxjs": "^6.6.3",
    "split2": "^3.2.2",
    "zeromq": "^6.0.0-beta.6",
    "vscode-debugprotocol": "^1.41.0"
  }
}
